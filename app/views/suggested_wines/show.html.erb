<div class="page-header">
  <h3>Suggested Wine #<%= @suggested_wine.id %></h3>
</div>

<div class="row">

  <div class="form-group">
    <dt>  Wine </dt>
    <dd><%= @suggested_wine.wine_id %></dd>

    <dt>From</dt>
    <dd><%= User.find_by(:id => @suggested_wine.user_id_from) %></dd>

  </dl>

  <div class="btn-group btn-group-justified">
    <a href="/suggested_wines" class="btn btn-primary">
      Back
    </a>

    <a href="/delete_suggested_wine/<%= @suggested_wine.id %>" class="btn btn-danger" rel="nofollow">
      Delete
    </a>
  </div>
</div>
</div>
