

<div class="page-header">
  <h1>
    Suggested wines
    <a href="/suggested_wines/new" class="btn btn-lg btn-success">New Suggested wine</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Label</th>
        <th>Wine Name</th>
        <th>Winery</th>
        <th>Varietal</th>
        <th>Year</th>
        <th>Price</th>
        <th>From</th>
        <th>Bucket List?</th>
        <th>Actions</th>
      </tr>

      <% @suggested_wines.each do |suggested_wine| %>
      <!-- <tr>
      <td><%= Mycellarwine.find_by(:id => suggested_wine.wine_id).wine_name %>
    </td> -->
    <td><img src = "<%= suggested_wine.wine.image_id %>"class = "img-responsive"</td>
    <td><%= suggested_wine.wine.wine_name %></td>
    <td><%= suggested_wine.wine.winery %></td>
    <td><%= suggested_wine.wine.varietal.varietal_name %></td>
    <td><%= suggested_wine.wine.year %></td>
    <td>$<%= suggested_wine.wine.price %></td>
    <td><%= User.find_by(:id => suggested_wine.user_id_from).name %></td>
    <!-- Label and input for bucket_list_wine -->
    <td>
      <input type="checkbox" id="bucket_list_wine" name="bucket_list_wine">
    </td>
    <td>

      <td>
        <div class="row">
          <div class="col-md-12">
            <form action="/create_mycellarwine" method="post">
              <!-- Hidden input for authenticity token to protect from forgery -->
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
              <input name="user_id" type = "hidden" value="<%= current_user.id%>">

              <!-- Label and input for wine_name -->
              <div class="form-group">
                <input type="hidden" id="wine_name" name="wine_name" placeholder="Wine name" class="form-control" value="<%= suggested_wine.wine.wine_name %>">
              </div>

              <!-- Label and input for year -->
              <div class="form-group">

                <input type="hidden" id="year" name="year" placeholder="Year" class="form-control" value="<%= suggested_wine.wine.year %>">
              </div>

              <!-- Label and input for winery -->
              <div class="form-group">

                <input type="hidden" id="winery" name="winery" placeholder="Winery" class="form-control" value="<%= suggested_wine.wine.winery %>">
              </div>

              <!-- Label and input for varietal_id -->
              <div class="form-group">

                <input type="hidden" id="varietal_id" name="varietal_id" placeholder="Varietal" class="form-control" value="<%= suggested_wine.wine.varietal_id %>">

<!--
                <%= select_tag(:varietal_id, options_from_collection_for_select(Varietal.all, :id, :varietal_name, suggested_wine.wine.varietal_id), :class => "form-control") %> -->

                <!-- Label and input for price -->
                <div class="form-group">
                  <input type="hidden" id="price" name="price" placeholder="Price" class="form-control" value="<%= suggested_wine.wine.price %>">
                </div>


                <!-- Label and input for image_id -->

                <div class="form-group">
                  <input type="hidden" id="image_id" name="image_id" placeholder="Image" class="form-control" value="<%= suggested_wine.wine.image_id %>">
                </div>

                <button class="btn btn-success">
                  Add to Cellar
                </button>
              </form>
              <a href="/delete_suggested_wine/<%= suggested_wine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </div>
        </div>
      </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
