<div class="page-header">
  <h1>
    My Cellar
    <a href="/mycellarwines/new" class="btn btn-lg btn-success">Add a new wine to my cellar</a>
  </h1>
</div>

<div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "wines_filters" do |f| %>
    <p class="lead">Narrow results:</p>

    <div class="form-group">
      <%= f.label :wine_name_cont, "Wine name contains" %>
      <%= f.text_field :wine_name_cont, :class => "form-control", :placeholder => "Wine name contains" %>
    </div>

    <div class="form-group">
      <%= f.label :winery_cont, "Winery contains" %>
      <%= f.text_field :winery_cont, :class => "form-control", :placeholder => "Winery contains" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Price" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <%= f.text_field :price_gteq, :class => "form-control", :placeholder => "Price greater than or equal to" %>
        </div>
        <div class='col-md-6'>
          <%= f.text_field :price_lteq, :class => "form-control", :placeholder => "Price less than or equal to" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :year_cont, "Year contains" %>
      <%= f.text_field :year_cont, :class => "form-control", :placeholder => "Year contains" %>
    </div>

    <div class="form-group">
      <%= f.label :created_at, "Created at" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <div class='input-group date' id='created_atgteqPicker'>
            <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>

        <div class='col-md-6'>
          <div class='input-group date' id='created_atlteqPicker'>
            <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
    $(function () {
      $('#created_atgteqPicker').datetimepicker({
        format: 'YYYY-MM-DD hh:mm:SS'
      });
      $('#created_atlteqPicker').datetimepicker({
        useCurrent: false,
        format: 'YYYY-MM-DD hh:mm:SS'
      });
      $('#created_atgteqPicker').on("dp.change", function (e) {
        $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
      });
      $('#created_atlteqPicker').on("dp.change", function (e) {
        $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
      });
    });
    </script>


    <div class="form-group">
      <%= f.label :reviews_stars_cont, "Review stars contains" %>
      <%= f.text_field :reviews_stars_cont, :class => "form-control", :placeholder => "Review stars contains" %>
    </div>

    <div class="form-group">
      <%= f.label :varietal_varietal_name_cont, "Varietal varietal_name contains" %>
      <%= f.text_field :varietal_varietal_name_cont, :class => "form-control", :placeholder => "Varietal varietal_name contains" %>
    </div>

    <div class="form-group">
      <%= f.label :bucket_list_wine_true, "Bucket List Wine" %>
      <%= f.check_box :bucket_list_wine_true, include_hidden: false %>
    </div>



    <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

    <a href="/mycellarwiness" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#wines_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Wine Name</th>
        <th>Year</th>
        <th>Price</th>
        <th>Varietal</th>
        <th>Winery</th>
        <th>Rating</th>
        <th>Bucket List</th>
        <th>Actions</th>
      </tr>

      <% @mycellarwines.each do |mycellarwine| %>
      <tr>
        <td><img src = "<%= mycellarwine.image_id %>" class = "img-responsive"></td>
        <td><%= mycellarwine.wine_name %></td>
        <td><%= mycellarwine.year %></td>
        <td><%= mycellarwine.price %></td>
        <td><%= mycellarwine.varietal.varietal_name %></td>

        <td><%= mycellarwine.winery %></td>
        <td><%= mycellarwine.reviews %></td>
        <td><%= mycellarwine.bucket_list_wine %></td>

        <td>

          <a href="/mycellarwines/<%= mycellarwine.id %>" class="btn btn-primary">Show</a>
          <a href="/mycellarwines/<%= mycellarwine.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mycellarwine/<%= mycellarwine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <a href="/reviews/new" class="btn btn-success">Add a Review</a>



        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
