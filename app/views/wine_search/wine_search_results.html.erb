<h1>Results</h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>Wine Name</th>
        <th>Year</th>
        <th>Winery</th>
        <th>Varietal</th>
        <th>Price</th>
        <th>Type</th>
      </tr>

      <% @wines_from_api.each do |wine_hash| %>
      <!-- Include the html here that you want for each wine entry -->
      <tr>
        <form action="/create_mycellarwine" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <td> <img src = "<%= wine_hash["image"] %>"></td>
          <td><input type="text" id="wine_name" name="wine_name" placeholder="Wine name" class="form-control" value="<%= wine_hash["name"] %>"></td>

          <td> <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= wine_hash["vintage"] %>">
          </td>

          <td> <input type="text" id="winery" name="winery" placeholder="Winery" class="form-control" value="<%= wine_hash["winery"] %>"> </td>

          <td><input type="text" id="varietal_id" name="varietal_id" placeholder="Varietal" class="form-control" value="<%= wine_hash["varietal"] %>">

          </td>
          <td><input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= wine_hash["price"] %>">
          </td>

          <td> <%= wine_hash["type"] %></td>



          <td><button class="btn btn-success">
            Add to My Cellar
          </button></td>

        </tr>
        <% end %>
      </table>


    </div>
